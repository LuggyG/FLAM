<form method="POST" action="/panier">
  <div class="form-group">
    <input type="hidden" name="name" class="form-control" id="name" value="{{game.name}}">
  </div>
  <div class="form-group">
    <input type="hidden" name="cover_url" class="form-control" id="cover_url" value="{{game.cover.url}}">
  </div>
  <div class="form-group">
    <input type="hidden" name="platform_slugs" class="form-control" id="platform_slugs" value="{{game.platforms | join(",", "slug")}}">
  </div>

  <div class="form-group">
    <input type="hidden" name="price" class="form-control" id="price" value="{{game.price}}">
  </div>

  <button type="submit" class="btn btn-danger btn-sm add-to-cart"><div id="price">{{game.price}}â‚¬</div><div id="addcart"> Ajouter au panier</div></button>
</form>